    "@types/nw.gui": "0.0.20",
    "chokidar": "^3.5.1",
    "cross-env": "^7.0.3",
    "live-server": "^1.2.1",
    "rollup": "^2.38.1",
    "rollup-plugin-glslify": "^1.2.0",
    "rollup-plugin-terser": "^7.0.2"
  }
